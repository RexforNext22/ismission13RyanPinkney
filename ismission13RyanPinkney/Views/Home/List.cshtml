@{
    <!-- Set the tab title-->
    ViewData["Title"] = "All Bowlers";

}

<!-- Header that dynamically build the name of the team-->
<h2>Bowler Roster: <span style="color: green;">@ViewBag.header</span></h2>



<!--Retrieves the list from the controller-->
@model List<Bowler>
<!--Table to show all the applicants-->
<!--Display to display the records formatted with Bootstrap-->


<div class="row">
    <div class="col-3">
        <vc:teams></vc:teams>
    </div>


    <div class="col-9">
        <table class="table table-bordered table-striped">

            <thread class="font-weight-bold">

                <!--Columns-->
                <tr>
                    <td>First Name:</td>
                    <td>Last Name:</td>
                    <td>Middle Inital:</td>
                    <td>Address:</td>
                    <td>City:</td>
                    <td>State:</td>
                    <td>Zip:</td>
                    <td>Phone:</td>
                    <td>Team:</td>
                </tr>

            </thread>

            <tbody>

                <!--Rows-->
                @foreach (var iCount in Model)
                {<!-- Model needs to be capitalized-->

                    <tr>
                        <td>@iCount.BowlerFirstName</td>
                        <td>@iCount.BowlerLastName</td>
                        <td>@iCount.BowlerMiddleInit</td>
                        <td>@iCount.BowlerAddress</td>
                        <td>@iCount.BowlerCity</td>
                        <td>@iCount.BowlerState</td>
                        <td>@iCount.BowlerZip</td>
                        <td>@iCount.BowlerPhoneNumber</td>
                        <td>@iCount.Team.TeamName</td>

                        <!--Buttons to delete and edit that pass the id as a parameter in the url-->
                        <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@iCount.BowlerID">Edit</a></td>
                        <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@iCount.BowlerID">Delete</a></td>
                    </tr>

                }



            </tbody>


        </table>
    </div>
</div>